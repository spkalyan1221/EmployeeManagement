@model List<EmployeeManagement.Models.Domainmodel.Employee>

@{
}

<h1>Employees</h1>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Department</th>
			<th>Email</th>
			<th>Sex</th>
			<th>MartialStatus</th>
			<th>Salary</th>
			<th>DateOfBrith</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				  <td>@employee.ID</td>
                  <td>@employee.Name</td>
                  <td>@employee.Department</td>
                  <td>@employee.Email</td>
                  <td>@employee.Sex</td>
                  <td>@employee.MartialStatus</td>
                  <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
				  <td><a href="Employees/View/@employee.ID">View</a></td>
			</tr>
		}
	</tbody>

</table>